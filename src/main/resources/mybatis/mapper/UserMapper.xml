<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.airconditioner.community.mapper.UserMapper">

    <insert id="registerByGithub" parameterType="com.airconditioner.community.bean.User">
        insert into user
            (name, account_id, token, gmt_create, gmt_modified)
        values
            (#{name}, #{accountId}, #{token}, #{gmtCreate}, #{gmtModified})
    </insert>

    <select id="findUserByToken" resultType="com.airconditioner.community.bean.User">
        select * from user where token = #{token}
    </select>
</mapper>
